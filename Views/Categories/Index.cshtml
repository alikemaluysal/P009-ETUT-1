@model List<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>KATEGORİLER</h1>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryId</td>
            <td>@item.CategoryName</td>
            <td>

                <a data-bs-toggle="modal" data-bs-target="#exampleModal" 
               class="sil btn btn-danger">SİL
                    <input type="hidden" id="categoryId" value="@item.CategoryId" />
                </a>

                <a asp-action="UpdateCategory"
               asp-route-id="@item.CategoryId"
               asp-controller="Categories"
               class="btn btn-warning">GÜNCELLE</a>

                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Uyarı!</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Silmek istediğinize emin misiniz!
                            </div>
                            <div class="modal-footer">
                                <a class="btn btn-secondary" data-bs-dismiss="modal">İptal</a>
                                <a asp-action="DeleteCategory" asp-route-id="@item.CategoryId" asp-controller="Categories" class="btn btn-danger">Sil
                                   
                                    
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
        </tr>

    }
</table>

